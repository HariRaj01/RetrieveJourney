      function getJourneyById()
      {
        let refreshToken =  $('#rt').val();
        let oauthToken =  $('#oat').val();
        let memberid =  $('#mid').val();
        let soap_instance_url =  $('#siu').val();
        console.log("RefreshToken",refreshToken);
        
        
        
        
